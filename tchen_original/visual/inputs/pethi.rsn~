%  WM Task with 1.5-second delay
%  Noise input for left hemisphere runs continuously,
%  and with high attention

WAPet 10		% Write PET every 10 iterations and reset

Randseed  1000		%seed for random number generator

#include /home/bhguest/brent/visual/inputs/ggns1.inp 	%left Input ON
Run 200		% 200 ticks without right input

% *************************************************************
%  STIMULUS # 1
% *********************


#include /home/bhguest/brent/visual/sfiles/hiattn_r.s	% High Attention
#include /home/bhguest/brent/visual/sfiles/hiattn_l.s	% Attention,left


#include /home/bhguest/brent/visual/inputs/input1.inp 	%right Input ON

Run 200					 %  200=1sec. 
#include /home/bhguest/brent/visual/inputs/noinp.lgn  	%right Input OFF
Run 300					 %  Delay	
#include /home/bhguest/brent/visual/inputs/input1.inp 	%right Input ON-match
Run 200
#include /home/bhguest/brent/visual/inputs/noinp.lgn  	%right Input OFF
#include /home/bhguest/brent/visual/sfiles/loattn_r.s

Run 200

% ********************   INTERTRIAL INTERVAL


#include /home/bhguest/brent/visual/sfiles/reset.s    %rt & lt Input OFF and reset delay units
#include /home/bhguest/brent/visual/inputs/ggns2.inp 	%left Input ON

Run 100


% *************************************************************
%  STIMULUS # 2
% *********************


#include /home/bhguest/brent/visual/sfiles/hiattn_r.s	% High Attention
 
#include /home/bhguest/brent/visual/inputs/input2.inp 	%right Input ON

Run 200					 %  200=1sec.
#include /home/bhguest/brent/visual/inputs/noinp.lgn  	%right Input OFF
Run 300					 %  Delay	
#include /home/bhguest/brent/visual/inputs/input1.inp 	%right Input ON-match
Run 200
#include /home/bhguest/brent/visual/inputs/noinp.lgn  	%right Input OFF
#include /home/bhguest/brent/visual/sfiles/loattn_r.s

Run 200

% ********************   INTERTRIAL INTERVAL


#include /home/bhguest/brent/visual/sfiles/reset.s    %rt & lt Input OFF and reset delay units
#include /home/bhguest/brent/visual/inputs/ggns3.inp 	%left Input ON

Run 100


% *************************************************************
%  STIMULUS # 3
% *********************


#include /home/bhguest/brent/visual/sfiles/hiattn_r.s	% High Attention	
#include /home/bhguest/brent/visual/inputs/input3.inp 	%right Input ON

Run 200					 %  200=1sec.

#include /home/bhguest/brent/visual/inputs/noinp.lgn  	%right  Input OFF
Run 300					 %  Delay
#include /home/bhguest/brent/visual/inputs/input3.inp 	%right Input ON-match

Run 200
#include /home/bhguest/brent/visual/inputs/noinp.lgn  	%right  Input OFF
#include /home/bhguest/brent/visual/sfiles/loattn_r.s

Run 200

% ********************   INTERTRIAL INTERVAL


#include /home/bhguest/brent/visual/sfiles/reset.s    %both Input OFF and reset delay units
Run 100








